                  "dotMatchesNewLines": false,
                  "utf8support": true,
                  "items": [
                    ["(\\\\v \\d+ .+)(ALEPH) :\\x20", "\\\\qa $2\\r\\n\\\\p\\r\\n$1"],
                    ["(\\\\v \\d+ )([A-Z]+) :\\x20", "\\\\qa $2\\r\\n\\\\p\\r\\n$1"]
